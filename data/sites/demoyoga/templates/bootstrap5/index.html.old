<!doctype html>
<html lang="{{page.language}}" data-bs-theme="{{ theme.colormode ? theme.colormode : 'auto'}}">

<head>
    <script src="{{asset}}/coloor-mode.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Qwwwest">
    <meta name="generator" content="Namaskar">
    <title>{{page.title}} :: {{site.name}}</title>


    {% if theme.bootswatch %}
    <link href="{{asset}}/bootswatch/{{theme.bootswatch}}/bootstrap.min.css" rel="stylesheet">
    {% else %}
    <link href="{{asset}}/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    {% endif %}
    <link href="{{asset}}/namaskar.css" rel="stylesheet">
    <link href="{{asset}}/styles.css" rel="stylesheet">



</head>

<body {{ theme.navbar.position ? 'class="navbar-' . theme.navbar.position . '"' : '' }}>
    {# https://dev.to/codeply/bootstrap-5-sidebar-examples-38pb {% include color-mode.html %} #}

    {% include navbar.html %}
    blabla
    <div class="container-fluid pb-3 flex-grow-1 d-flex flex-column flex-sm-row overflow-auto">

        {% if page.menu.aside.left || site.menu.aside.left %}

        {% include aside.html %}
        {% endif %}
        <div class="container col overflow-auto h-100 ">
            {% include breadcrumb.html %}
            <main class="container col overflow-auto h-100 border rounded-3 p-3">
                [info title="Important yess sir" x]
                this website is for demo only.
                [/info]


                {% if page.admin %}
                {% include admin.html %}
                {% end if %}

                {% if page.show.toc %}
                {{ page.toc }}
                {% end if %}

                {{ page.content }}
            </main>

        </div>
    </div>


    {% if site.menu.footer %}
    <footer class="pt-3 mt-4 text-body-secondary border-top">
        [render site.menu.footer]
    </footer>
    {% end if %}



    <script src="{{asset}}/bootstrap/js/bootstrap.bundle.min.js"></script>

    {% if site.load.highlight.js %}
    <link rel="stylesheet" href="{{asset}}/vendor/highlight/styles/{{ site.load.highlight.js.theme }}.min.css">
    <script src="{{asset}}/vendor/highlight/highlight.min.js"></script>
    <script>//hljs.highlightAll();
        document.addEventListener('DOMContentLoaded', (event) => {
            document.querySelectorAll('pre code').forEach((el) => {
                className = el.className;
                console.log("className = ".className);
                hljs.highlightElement(el);
            });
        });
    </script>

    {% end if %}
    {% if site.microlight %}
    <script src="{{asset}}/vendor/js/microlight.js"></script>
    <script>microlight.reset();</script>
    {% end if %}

    {% if site.jquery %}
    <script src="{{asset}}/vendor/js/jquery.js"></script>
    {% end if %}
</body>

</html>